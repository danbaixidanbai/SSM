<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting value="true" name="mapUnderscoreToCamelCase"/>
        <setting value="NULL" name="jdbcTypeForNull"/>
        <!--显式的指定每个我们需要更改的配置的值，即使他是默认的。防止版本更新带来的问题 -->
        <setting value="true" name="cacheEnabled"/>
        <setting value="true" name="lazyLoadingEnabled"/>
        <setting value="false" name="aggressiveLazyLoading"/>
    </settings>
    <databaseIdProvider type="DB_VENDOR">
        <property value="mysql" name="MySQL"/>
        <property value="oracle" name="Oracle"/>
        <property value="sqlserver" name="SQL Server"/>
    </databaseIdProvider>
</configuration>